{
  "name": "nova-ecs-editor",
  "version": "0.1.0",
  "description": "Cross-platform game editor for NovaECS framework",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently --kill-others \"vite\" \"tsc -p tsconfig.electron.json --watch\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.electron.json",
    "start": "npm run build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:win": "npm run build && electron-builder --win --publish=never",
    "dist:mac": "npm run build && electron-builder --mac --publish=never",
    "dist:linux": "npm run build && electron-builder --linux --publish=never",
    "lint": "eslint src electron --ext .ts,.tsx",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.electron.json --noEmit",
    "clean": "rimraf dist dist-electron release"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@esengine/nova-ecs": "file:../",
    "i18next": "^25.4.1",
    "i18next-browser-languagedetector": "^8.0.0",
    "immer": "^10.1.0",
    "lucide-react": "^0.544.0",
    "monaco-editor": "^0.52.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-i18next": "^15.0.0",
    "reflect-metadata": "^0.2.2",
    "zustand": "^5.0.0"
  },
  "build": {
    "appId": "com.esengine.nova-ecs-editor",
    "productName": "NovaECS Editor",
    "npmRebuild": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/main.js",
      "dist-electron/preload.js"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": "dir"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": "dir"
    },
    "extraMetadata": {
      "main": "dist-electron/main.js"
    }
  },
  "author": "esengine",
  "license": "MIT"
}
