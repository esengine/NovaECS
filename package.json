{
  "name": "@esengine/nova-ecs",
  "version": "1.0.2",
  "description": "Next-generation ECS game framework for TypeScript",
  "keywords": [
    "ecs",
    "game",
    "framework",
    "typescript",
    "entity",
    "component",
    "system"
  ],
  "author": "esengine",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/esengine/NovaECS.git"
  },
  "homepage": "https://github.com/esengine/NovaECS#readme",
  "bugs": {
    "url": "https://github.com/esengine/NovaECS/issues"
  },
  "main": "dist/nova-ecs.umd.js",
  "module": "dist/nova-ecs.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "docs": "typedoc",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build",
    "publish:patch": "npm version patch && npm publish --access public",
    "publish:minor": "npm version minor && npm publish --access public",
    "publish:major": "npm version major && npm publish --access public"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rollup": "^4.9.0",
    "ts-jest": "^29.1.0",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16"
  }
}
